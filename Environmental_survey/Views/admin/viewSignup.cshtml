@model IEnumerable<Environmental_survey.Models.register>

@{
    ViewData["Title"] = "viewSignup";
    Layout = "~/Views/Shared/Dashboard_header_footer.cshtml";
}


<div class="container">
    <table class="table table-striped table-hover table-bordered border-dark">
    <thead>
            <tr class="table-active">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                Action
            </th>
            
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-action="signupUpdate" class="btn btn-success" asp-route-id="@item.Id">Update</a> 
                <a asp-action="signupDelete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>