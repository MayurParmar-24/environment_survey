@model IEnumerable<Environmental_survey.Models.Survey>

@{
    ViewData["Title"] = "SurveyForStudent";
    Layout = "~/Views/Shared/User.cshtml";
}

<div class="container">
    <div class="row">
        

        @foreach (var item in Model)
        {

            <div class="col-lg-3">
                <div class="card">
                    <img src="~/images/@Html.DisplayFor(modelItem => item.SurveyImage)" width="100%" height="200px" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Details)</p>

                        <a href="@Url.Action("studentparticipate","admin")" class="btn btn-success">Participate In Survey</a>

                    </div>
                </div>

            </div>
        }

    </div>
</div>