@model Environmental_survey.Models.Survey

@{
    ViewData["Title"] = "surveyUpdate";
    Layout = "~/Views/Shared/Dashboard_header_footer.cshtml";
}




<div class="container">
<div class="row">
    <div class="col-lg-6 mx-auto">
        <img src="~/dashboard/assets/images/profile/survey2.jpg" width="100%" height="200px" />

        <form asp-action="surveyUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control mt-3" placeholder="Update Your Survey...." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                    <textarea asp-for="Details" class="form-control mt-3" rows="8" placeholder="Update Survey Details...."></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurveyImage" class="control-label"></label>
                <input asp-for="SurveyImage" class="form-control mt-3" placeholder="Paste Url... "/>
                <span asp-validation-for="SurveyImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input type="submit" value="Update Survey" class="btn btn-success mt-3" />
            </div>
        </form>
    </div>
</div>
</div>

