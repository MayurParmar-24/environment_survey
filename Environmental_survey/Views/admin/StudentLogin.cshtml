@model Environmental_survey.Models.Student

@{
    ViewData["Title"] = "StudentLogin";
    Layout = "~/Views/Shared/header_footer.cshtml";
}

<div class="container ">
    <div class="row mt-5 d-flex justify-content-center ">
            <div class="col-lg-5 card pt-5 mb-5" style="border-radius: 15px; background-color: rgba(255, 255, 255, 0.8);">
                <center>
                    <h1 class="pb-3">Student Login Form</h1>
                </center>
        <form asp-action="StudentLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Std_Name" class="form-control form-control-lg" style="height: 45px;" placeholder="Studnet Name..." />
                    <span asp-validation-for="Std_Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                        <input asp-for="Std_Roll_NO" class="form-control form-control-lg" style="height: 45px;" placeholder="Roll Number..." />
                    <span asp-validation-for="Std_Roll_NO" class="text-danger"></span>
                </div>
            



                <div class="form-group d-flex justify-content-center">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
                <p class="text-center text-muted mt-2 mb-2">
                    Don't have an account? <a href="@Url.Action("AddStudent","admin")" class="fw-bold text-body"><u>Register Here!!!</u></a>
                </p>
        </form>
    </div>
    
</div>
</div>
</center>